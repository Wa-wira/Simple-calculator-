#include <stdio.h>

int main() {

    int int1, int2;
    printf("Enter first integer: ");
    scanf("%d", &int1);
    printf("Enter second integer: ");
    scanf("%d", &int2);
    
    int intSum = int1 + int2;
    int intDiff = int1 - int2;
    
    printf("Integer Addition: %d + %d = %d\n", int1, int2, intSum);
    printf("Integer Subtraction: %d - %d = %d\n", int1, int2, intDiff);

    float float1, float2;
    printf("Enter first float: ");
    scanf("%f", &float1);
    printf("Enter second float: ");
    scanf("%f", &float2);
    
    float floatSum = float1 + float2;
    float floatDiff = float1 - float2;
    
    printf("Float Addition: %.2f + %.2f = %.2f\n", float1, float2, floatSum);
    printf("Float Subtraction: %.2f - %.2f = %.2f\n", float1, float2, floatDiff);
    
    return 0;
}
